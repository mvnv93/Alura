// 1- Pergunte ao usuário qual é o dia da semana. Se a resposta for "Sábado" ou "Domingo", mostre "Bom fim de semana!". Caso contrário, mostre "Boa semana!".

let diaSemana = prompt('Informe o dia da semana:');
console.log(diaSemana)
if (diaSemana == 'domingo'){
    alert('Bom fim de semana!');
} else if (diaSemana == 'sabado'){
        alert('Bom fim de semana!');
} else {
    alert('Boa semana!');
}

// 2- Verifique se um número digitado pelo usuário é positivo ou negativo. Mostre um alerta informando.

let numeroDigitado = prompt('Informe um número para saber se é positivo ou negativo:');
console.log(numeroDigitado)
if(numeroDigitado > 0){
    alert('O número digitado é positivo: ' + numeroDigitado);
} else {
    alert('O número digitado é negativo: ' + numeroDigitado);
}

// 3- Crie um sistema de pontuação para um jogo. Se a pontuação for maior ou igual a 100, mostre "Parabéns, você venceu!". Caso contrário, mostre "Tente novamente para ganhar.".

let pontuacaoJogo = prompt('Informe a sua pontuação no jogo:');
console.log(pontuacaoJogo)
if(pontuacaoJogo >= 100){
    alert('Parabéns, você venceu!');
} else {
    alert('Tente novamente para ganhar.');
}

// 4 - Crie uma mensagem que informa o usuário sobre o saldo da conta, usando uma template string para incluir o valor do saldo.

let saldoConta = prompt('Informe o saldo da sua conta:');
console.log(saldoConta)
alert(`O saldo na sua conta é: R$${saldoConta}.`);

// 5- Peça ao usuário para inserir seu nome usando prompt. Em seguida, mostre um alerta de boas-vindas usando esse nome.

let nnomeUsuario = prompt('Informe o seu nome:');
console.log(nnomeUsuario)
alert(`O seu nome é ${nnomeUsuario}`);
