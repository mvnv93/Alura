// Crie uma função que calcule o índice de massa corporal (IMC) de uma pessoa, a partir de sua altura, em metros, e peso, em quilogramas, que serão recebidos como parâmetro.
let altura = 1.86;
let peso = 87;

function calculaImc(alturaMetros,pesoKG){
    let imcCalculado = pesoKG / (alturaMetros * alturaMetros);
    return imcCalculado;
}

let resultadoImc = calculaImc (altura, peso);
alert(resultadoImc);

// Crie uma função que calcule o valor do fatorial de um número passado como parâmetro.

function calculaFatorail(numero){
    if (numero == 0 || numero == 1){
        return 1;
    }

    let fatorial = 1;
    for(let i = 2; i <= numero; i++){
        fatorial *= i;
    }
    return fatorial;
}

let numero = 5;
let resultado = calculaFatorail(numero);
console.log(`O fatorial de ${numero} é ${resultado}`);

// Crie uma função que converte um valor em dólar, passado como parâmetro, e retorna o valor equivalente em reais. Para isso, considere a cotação do dólar igual a R$4,80.
let valor = prompt('Informe o valor em reais a ser convertido:');

function converteDolarEmReais(x){
    let cotacaoDolar = 4.8;
    let valorEmReais = x * cotacaoDolar;
    return valorEmReais.toFixed(2);
}
let valorFinal = converteDolarEmReais(valor);
console.log(valorFinal);

// Crie uma função que mostre na tela a área e o perímetro de uma sala retangular, utilizando altura e largura que serão dadas como parâmetro.
function calculaAreaPerimetro(altura,largura){
    let area = altura * largura;
    let perimetro = 2 * (altura + largura);
    
    console.log(`A area é : ${area} metros quadrados`);
    console.log(`O perímetro é : ${perimetro} metros`);
}

let altura = 2;
let largura = 3;

calculaAreaPerimetro(altura,largura);

// Crie uma função que mostre na tela a área e o perímetro de uma sala circular, utilizando seu raio que será fornecido como parâmetro. Considere Pi = 3,14.

function calculaAreaPerimetro(raio){
    let area = Math.PI * raio * raio;
    let perimetro = 2 * Math.PI * raio;
    
    console.log(`A area é : ${area.toFixed(2)} metros quadrados`);
    console.log(`O perímetro da sala circular é: ${perimetro.toFixed(2)} metros`);

}

let raio = 3;

calculaAreaPerimetro(raio);

// Crie uma função que mostre na tela a tabuada de um número dado como parâmetro.
function mosrtarTabuada(numero){
    for(let i = 1; i<= 10; i++){
        let resultado = numero * i;
        console.log(`${numero} x ${i} = ${resultado}`);
    }
}

let numero = prompt('Informe o número para mostrar a sua tabuada: ');
mosrtarTabuada(numero);
